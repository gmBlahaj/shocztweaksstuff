[
  {
    "category": "Windows Store Fixes",
    "tweaks": [
      {
        "title": "Re-enable Microsoft Store",
        "description": "Fixes broken Store by re-registering.",
        "command": "powershell -Command \"Get-AppxPackage *WindowsStore* | Foreach {Add-AppxPackage -DisableDevelopmentMode -Register '$($_.InstallLocation)\\AppXManifest.xml'}\""
      },
      {
        "title": "Reset Microsoft Store",
        "description": "Runs wsreset.exe to clear Store cache.",
        "command": "wsreset.exe"
      }
    ]
  },
  {
    "category": "Explorer Tweaks",
    "tweaks": [
      {
        "title": "Show File Extensions",
        "description": "Reveals extensions for known file types.",
        "command": "reg add HKCU\\Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced /v HideFileExt /t REG_DWORD /d 0 /f"
      }
    ]
  }
]
