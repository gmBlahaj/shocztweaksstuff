{
  "tweaks": [
    {
      "title": "Enable Microsoft Store",
      "description": "Re-enables the Microsoft Store using PowerShell.",
      "command": "Get-AppxPackage -allusers Microsoft.WindowsStore | Foreach {Add-AppxPackage -DisableDevelopmentMode -Register \"$($_.InstallLocation)\\AppXManifest.xml\"}"
    }
  ],
  "categories": [
    {
      "title": "System Tweaks",
      "items": [
        {
          "title": "Disable Telemetry",
          "description": "Disables telemetry services.",
          "command": "Set-Service DiagTrack -StartupType Disabled"
        },
        {
          "title": "Disable Cortana",
          "description": "Completely disables Cortana.",
          "command": "REG ADD \"HKLM\\SOFTWARE\\Policies\\Microsoft\\Windows\\Windows Search\" /v AllowCortana /t REG_DWORD /d 0 /f"
        }
      ]
    }
  ]
}
